<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mrpet.mrpet.Usuario">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Informações do Usuário"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:textSize="20sp"
        android:background="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tvNome"
        android:layout_centerHorizontal="true"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="Nome"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_below="@+id/tvTitulo"
        />

    <EditText
        android:id="@+id/etNome"
        android:enabled="false"
        android:layout_centerHorizontal="true"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:background="@android:color/white"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@+id/tvNome"
        />

    <TextView
        android:id="@+id/tvEmail"
        android:layout_centerHorizontal="true"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_below="@+id/etNome"
        />

    <EditText
        android:id="@+id/etEmail"
        android:enabled="false"
        android:layout_centerHorizontal="true"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:background="@android:color/white"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@+id/tvEmail"
        />

    <TextView
        android:id="@+id/tvSexo"
        android:layout_centerHorizontal="true"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="Sexo"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_below="@+id/etEmail"
        />

    <EditText
        android:id="@+id/etSexo"
        android:enabled="false"
        android:layout_centerHorizontal="true"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:background="@android:color/white"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@+id/tvSexo"
        />

    <TextView
        android:id="@+id/tvDtNascimento"
        android:layout_centerHorizontal="true"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="Data de Nascimento"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_below="@+id/etSexo"
        />

    <EditText
        android:id="@+id/etDtNascimento"
        android:enabled="false"
        android:layout_centerHorizontal="true"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:background="@android:color/white"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@+id/tvDtNascimento"
        />

    <TextView
        android:id="@+id/tvDevice"
        android:layout_centerHorizontal="true"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="Device"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_below="@+id/etDtNascimento"
        />

    <EditText
        android:id="@+id/etDevice"
        android:enabled="false"
        android:layout_centerHorizontal="true"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:background="@android:color/white"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@+id/tvDevice"
        />

    <Button
        android:id="@+id/btnVoltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/white"
        android:drawableLeft="@drawable/previous"
        android:onClick="voltar"
        android:text="Voltar" />

</RelativeLayout>
