<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mrpet.mrpet.GerenciadorDieta">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gerenciador de Dieta"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:textSize="20sp"
        android:background="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />


    <TextView
        android:id="@+id/tvNome"
        android:layout_centerHorizontal="true"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="Nome"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_below="@+id/tvTitulo"
        />

    <EditText
        android:id="@+id/etNome"
        android:enabled="false"
        android:layout_centerHorizontal="true"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:background="@android:color/white"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@+id/tvNome"
        />

    <TextView
        android:id="@+id/tvFrequencia"
        android:layout_centerHorizontal="true"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Frequência"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_below="@+id/etNome" />

    <EditText
        android:id="@+id/etFrequencia"
        android:enabled="false"
        android:layout_centerHorizontal="true"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:background="@android:color/white"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@+id/tvFrequencia"
        />

    <TextView
        android:id="@+id/tvDtIniio"
        android:layout_centerHorizontal="true"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Data de Início"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_below="@+id/etFrequencia" />

    <EditText
        android:id="@+id/etDtInicio"
        android:enabled="false"
        android:layout_centerHorizontal="true"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:background="@android:color/white"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@+id/tvDtIniio"
        />


    <TextView
        android:id="@+id/tvDtTermino"
        android:layout_centerHorizontal="true"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Data de Término"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_below="@+id/etDtInicio" />

    <EditText
        android:id="@+id/etDtTermino"
        android:enabled="false"
        android:layout_centerHorizontal="true"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:background="@android:color/white"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@+id/tvDtTermino"
        />

    <TextView
    android:id="@+id/tvQtdRacao"
    android:layout_centerHorizontal="true"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:text="Qtd de Ração Servida (em gramas)"
    android:textSize="16dp"
    android:textStyle="bold"
    android:layout_below="@+id/etDtTermino" />

    <EditText
        android:id="@+id/etQtdRacao"
        android:enabled="false"
        android:layout_centerHorizontal="true"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:background="@android:color/white"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@+id/tvQtdRacao"
        />

    <TextView
        android:id="@+id/tvHorarios"
        android:layout_centerHorizontal="true"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Horários"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_below="@+id/etQtdRacao" />

    <EditText
        android:id="@+id/etHorarios"
        android:enabled="false"
        android:layout_centerHorizontal="true"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:background="@android:color/white"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@+id/tvHorarios"
        />

    <Button
        android:id="@+id/btnVoltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/white"
        android:drawableLeft="@drawable/previous"
        android:onClick="voltar"
        android:text="Voltar" />



</RelativeLayout>
